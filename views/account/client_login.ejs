<%- include ('../partials/app_header') %>

<div id="loginPage">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Screen Login</h5>
                        <form class="form-signin">
                            <div class="form-group">
                                <input type="text" class="form-control" aria-describedby="emailHelp" id="inputScreenId"  placeholder="Screen id" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control"  id="inputScreenCode" placeholder="Screen code">
                            </div>
                            <div class="form-group text-center" id="loginFlash">
                            </div>
                            <button class="btn btn-lg btn-block text-uppercase text-white" id="btnLogin"  type="button">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/app_login_footer') %>

                    <li class="nav-item">
                        <a href="/item" class="nav-link">
                            <span style="color:#696969"><i class="icon-stack3"></i> Items </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/user" class="nav-link">
                            <span style="color:#696969"><i class="icon-users"></i> Users</span>
                        </a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a href="/customer" class="nav-link">
                        <span style="color:#696969"><i class="icon-user-tie"></i> Customers</span>
                    </a>
                </li>

<%- include ('partials/layout_header') %>

<div class="page-content">
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a href="#">dashboard</a>
                    <div id="close-sidebar">
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="user-info">
            <span class="user-name">Jhon <strong>Smith</strong>
            </span>
                        <span class="user-role">Administrator</span>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="fa fa-list-alt" aria-hidden="true"></i> Playlists</li>
                    <li class="list-group-item"><i class="fa fa-desktop" aria-hidden="true"></i> Screens</li>
                </ul>
            </div>
            <!-- sidebar-content  -->
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            <div class="row playlist-content">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <h2>Your Playlists</h2>
                                </div>
                                <div class="col-md-8"><a class="btn btn-primary float-right" href="#" data-toggle="modal" data-target="#addPlaylistModal"><i class="fa fa-plus" aria-hidden="true"></i> &nbsp;Add Playlist </a></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="accordion" id="accordionPlaylist">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="right-sidebar">
                        <h4>Media</h4>
                        <div class="row" id="mediaThumbnail">
                        </div>
                        <div class="row">
                            <div class="p-4 col-md-12">
                                <h4 class="mb-4" contenteditable="true">Media Information</h4>
                                <ul class="list-unstyled" id="mediaInformation">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<!--modal-add-playlist-->
<div class="modal" id="addPlaylistModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Playlist</h5> <button type="button" class="close" data-dismiss="modal"> <span>×</span> </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group"> <input id="inputPlaylistName" type="text" class="form-control" placeholder="Enter playlist name"> </div>
                </form>
            </div>
            <div class="modal-footer"> <button type="button" id="btnAddPlaylist" class="btn btn-primary">Add</button> <button id="btnCloseAddPlaylistModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> </div>
        </div>
    </div>
</div>
<!--modal-add-media-->
<div class="modal" id="addMediaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="titleMediaAddModal" class="modal-title">Add Media</h5> <button type="button" class="close" data-dismiss="modal"> <span>×</span> </button>
            </div>
            <div class="modal-body">
                <form id="formMediaUpload" enctype="multipart/form-data">
                    <div class="form-group">
                        <input id="inputHiddenPlaylist" type="hidden" name="playlist" value="">
                        <input id="inputMediaFile" type="file" name="mediaFiles[]" data-url="/api/upload" class="form-control" placeholder="Select media file" multiple>
                    </div>
                </form>
                <div id="uploadedFiles" class=""row>

                </div>
            </div>
            <div class="modal-footer">
                <button id="btnCloseAddMediaModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/layout_footer') %>
